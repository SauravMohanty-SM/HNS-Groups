<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/signupback"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/imageViewSignUp"
        android:layout_width="209dp"
        android:layout_height="156dp"
        android:layout_gravity="center"
        android:src="@drawable/signup"
        app:layout_constraintBottom_toTopOf="@+id/registerHere"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/registerHere"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Register Here!"
        android:textAlignment="center"
        android:textColor="#323232"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/userName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewSignUp" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:background="@drawable/background_loginpage"
        android:hint="User Name"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/userEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlCompat"
        app:layout_constraintTop_toBottomOf="@id/registerHere"/>

    <EditText
        android:id="@+id/userEmail"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:background="@drawable/background_loginpage"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/userPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlCompat"
        app:layout_constraintTop_toBottomOf="@id/userName"/>

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:background="@drawable/background_loginpage"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlCompat"
        app:layout_constraintTop_toBottomOf="@id/userEmail"/>

    <Button
        android:id="@+id/buttonSignup"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/sign_up_button"
        android:text="Sign Up"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userPassword"
        android:layout_marginBottom="120dp"/>

    <TextView
        android:id="@+id/haveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an Account?"
        android:textColor="#382275"
        android:textSize="16dp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/buttonSignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>